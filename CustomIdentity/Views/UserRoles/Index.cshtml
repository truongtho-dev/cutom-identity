
@model List<UserRolesViewModel>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Quản lý phân quyền thành viên</h1>
<table class="table table-striped">
	<thead>
		<tr>
			<th>Tên</th>
			<th>Họ</th>
			<th>Email</th>
			<th>Quyền hạn</th>
			<th>Hành động</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var user in Model)
		{
			<tr>
				<td>@user.FirstName</td>
				<td>@user.LastName</td>
				<td>@user.Email</td>
				<td>@string.Join(" , ", user.Roles.ToList())</td>
				<td>
					<a class="btn btn-primary" asp-controller="UserRoles" asp-action="Manage" asp-route-userId="@user.UserId">Quản lý phân quyền</a>
				</td>
			</tr>
		}
	</tbody>
</table>