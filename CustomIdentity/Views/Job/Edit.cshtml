@model CustomIdentity.Models.Job

@{
    ViewData["Title"] = "Edit";
}


<h4>Edit job</h4>
<hr />
<div class="row">
    <div class="col-md-4">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Id" />
			<div class="form-group">
				<label asp-for="Name" class="control-label"></label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Note" class="control-label"></label>
				<input asp-for="Note" class="form-control" />
				<span asp-validation-for="Note" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="JobStatus" class="control-label"></label>
				<select asp-for="JobStatus" asp-items="Html.GetEnumSelectList<JobStatus>()" class="form-control"></select>
				<span asp-validation-for="JobStatus" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="DateStart" class="control-label"></label>
				<input asp-for="DateStart" class="form-control" />
				<span asp-validation-for="DateStart" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="DeadLine" class="control-label"></label>
				<input asp-for="DeadLine" class="form-control" />
				<span asp-validation-for="DeadLine" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="AssignTo" class="control-label"></label>
				<select asp-for="AssignTo" class="form-control" asp-items="ViewBag.SelectOptions"></select>
				<span asp-validation-for="AssignTo" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		</form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

