@model CustomIdentity.Models.Job
@{
    ViewData["Title"] = "View";
}


<h4>Create Job</h4>
<hr />
<div class="row">
    <div class="col-md-4">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Name" class="control-label"> Tên công việc</label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Note" class="control-label">Ghi chú</label>
				<input asp-for="Note" class="form-control" />
				<span asp-validation-for="Note" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="JobStatus" class="control-label">Tình trạng</label>
				<select asp-for="JobStatus" asp-items="Html.GetEnumSelectList<JobStatus>()" class="form-control"></select>
				<span asp-validation-for="JobStatus" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="DateStart" class="control-label">Ngày bắt đầu</label>
				<input asp-for="DateStart" class="form-control" />
				<span asp-validation-for="DateStart" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="DeadLine" class="control-label">Ngày hoàn thành</label>
				<input asp-for="DeadLine" class="form-control" />
				<span asp-validation-for="DeadLine" class="text-danger"></span>
			</div>
			
			<div class="form-group">
				<label asp-for="AssignTo" class="control-label">Người thực hiện</label>
				<select asp-for="AssignTo" class="form-control" asp-items="ViewBag.SelectOptions"></select>
			</div>
			<div class="form-group">
				<button type="submit" class="btn btn-primary">Tạo mới</button>
				<a asp-action="Index" class="btn btn-warning">Về danh sách</a>
			</div>
		</form>
    </div>
</div>
